extends ../template

block  var
    - var title = "Добро пожаловать!"
    - var src = "scripts/index.js"
    
block content
    section.section.welcome
        .welcome__autorize.autorize Авторизироватся
        .welcome__center.welcome__center_author
            .welcome__center-top
                .welcome__user.author-title
                    .author-title__img
                    .author-title__name Руслан Мустафин
                    .author-title__description Личный сайт веб-разработчика
                    ul.welcome__social.social.clearfix
                        each item in ['vk', 'git', 'in']
                            li.social__item
                                a(class='social__link social__link_' + item)
                                    svg(width="25" height="25")
                                        use(xlink:href="image/icon/sprite.svg#" + item class="social__icon")
            ul.welcome__buttons.navigation
                li.navigation__button: a(href='mywork.html' class='navigation__link') Мои работы
                li.navigation__button: a(href='about.html' class='navigation__link') Обо мне
                li.navigation__button: a(href='blog.html' class='navigation__link') Блог
        .welcome__center.welcome__center_login
            .welcome__center-top
                form.form(action="")
                    h1.form__title.title Авторизуйтесь
                    .form__login
                        input.form__login-input(type="text" name='login')
                        .form__login-pic
                    .form__password
                        input.form__password-input(type="password" name='password')
                        .form__password-pic
                    label.form__block-check
                        input.form__check-input(type="checkbox" name='capcha')
                        .form__check
                        span.form__check-span Я человек
                    div.form__radio-question Вы точно не робот?
                    label.form__radio-human 
                        input.form__radio-input(type="radio" name='human')
                        .form__radio
                        | Да
                    label.form__radio-human
                        input.form__radio-input(type="radio" name='human')
                        .form__radio
                        | Не уверен
            ul.welcome__buttons.navigation
                li.navigation__button: a(href='#' class='navigation__link' id='toMain') На главную
                li.navigation__button: a(href='about.html' class='navigation__link') Войти
                
        .welcome__copyright &#9400; Руслан Мустафин | Создано с любовью в Loftscool | 2017